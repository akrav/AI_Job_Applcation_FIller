{
  "name": "ai-me-apply-monorepo",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "services/*",
    "packages/*"
  ],
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "install-all": "npm install",
    "dev": "npm --workspace services/user-authentication-service run dev",
    "start": "npm --workspace services/user-authentication-service run start",
    "test": "npm --workspace services/user-authentication-service run test",
    "test:watch": "npm --workspace services/user-authentication-service run test:watch",
    "node:version": "node -v && npm -v"
  },
  "devDependencies": {
    "concurrently": "^9.0.0"
  }
} 